{
    "compilerOptions": {
        "outDir": "./public",
        "target": "es5",
        "lib": [
            "es7",
            "dom"
        ],
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "jsx": "react",
        "jsxFactory": "h"
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}
